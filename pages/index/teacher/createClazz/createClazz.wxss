.create-clazz-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.avatar-box{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;

  padding: 10rpx 0;
  
  border-bottom: 15rpx solid #f9f9f9;
}
.clazz-avatar{
  width: 80rpx;
  height: 80rpx;
  background: #eeeeee;
  border-radius: 100%;
}

.line{
  height: 1rpx;
}

.clazz-info-box{
  width: 100%;

  display: flex;
  flex-direction: column;
}
.public-item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;

  height: 85rpx;
}
.public-item:not(:last-child){
  border-bottom: 1px solid #eee;
}
.public-item>text{
  padding-left: 30rpx;
  font-size: 14px;
  color: #999;
}
.public-name-input{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}
.public-name-input>input{
  text-align: right;
  font-size: 13px;

}
.public-name-input>text{
  height: 85rpx;
  line-height: 85rpx;
  
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.create-clazz-button{
  width: 80%;
  color: #fff;
  background: #4993fa;
  position: absolute;
  bottom: 60rpx;
}/* pages/index/teacher/createClazz/createClazz.wxss */