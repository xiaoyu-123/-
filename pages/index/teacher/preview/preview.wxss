.preview-container{
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #eeeeee;
}
.preview-container>view{
  padding-left: 30rpx;
}

.question-type{
  display: block;
  width: 100%;
  height: 75rpx;
  line-height: 75rpx;
  color: #4993fa;
  border-bottom: 1px solid #eeeeee;
  
  font-size: 14px;
}

.quesetion-box{
  display: flex;
  flex-direction: column;
  font-size: 14px;
  margin-top: 30rpx;
}

.quesetion-title-box{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.question-change{
  color: #4993fa;
  padding-right:30rpx; 
}

.question-option-box{
  display: flex;
  flex-direction: column;
}
.question-option-box .question-option{
  margin-top: 40rpx;
}

.question-select-box{
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
}

.question-select-item{
  border: 1px solid #eeeeee;
  height: 90rpx;
  width: 95%;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}
.question-select-item>text:first-child{
  display: block;
  background: #eeeeee;
  width: 90rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #4993fa;
}
.question-select-item>text:nth-child(2){
  padding-left: 50rpx;
}
.question-select-item:not(:first-child){
  margin-top: 30rpx;
}
.active{
  background: #eeeeee;
}

.question-level-box{
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  font-size: 14px;
  color: #999999;
}
.question-level-box>text:not(:first-child){
  margin-left: 20rpx;
  font-size: 14px;
}
.question-level-box>text:last-child{
  margin-left: 40rpx;
  font-size: 14px;
}

.public-button{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  border: 0;
  border-radius: 0;
  background: #4993fa;
  color: #fff;
