/* pages/teacherInfo/teacherInfo.wxss */
page{
  width: 100%;
  background: #f9f9f9;
}
input{
  font-size: 16px;
}
.item-container{
  width: 100%;

  padding-top: 10rpx;
  background: #fff;
  margin-bottom: 10rpx;
}
.item-container .item:not(:first-child){
  border-top: 1px solid #eeeeee;
}
.item{
  width: 100%;
  height: 120rpx;
  padding-left: 30rpx;
  position: relative;
}
.item-title{
  color: #999999;
  font-size: 12px;
}
.item-sign{
  position: absolute;
  top:50%;
  right: 60rpx;
  height: 56rpx;
  margin-top: -28rpx;
  color: #999999;
}

.button-container{
  width: 100%;
  background: #fff;
  padding-top: 120rpx;
}
.button-ok{
  width: 100%;
  border-radius: 0;
  background: #4993fa;
  color: #fff;

  position: fixed;
  left: 0;
  bottom: 0;
}