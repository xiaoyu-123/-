/* pages/index/userInfo/userInfo.wxss */
page {
  height: 100%;
}

.bg {
  background:#2172B4;
  width: 100%;
  height: 100%;
}

.bg_p {
  position:absolute;
top:-10%;
left:-29%;
width:180%;
height:123%;
opacity:.4;
transform:scale(.8);

}
.head{
  padding: 30rpx 0;
  text-align: center;
}
.head image{
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}
.head .name{
  font-size: 36rpx;
  color: #fff;
}
.info{
 margin:3% 10%;
width:80%;

}
.info>view{
  background: #4A93FA;
  color: #fff;
  font-size: 28rpx;
  border-radius: 30px;
  width: 100%;
  display: flex;
  margin: 20rpx 0;
  overflow: hidden;
}
.info>view>view{
  width: 50%;
  padding: 10rpx 20rpx;
  
}
.info>view>view:nth-child(2){
  border-left: 1px solid #73AAF7;
  
}
.info .copy{
  background: #D9002B;
  
}
.info button{
  margin: 40rpx 0;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  color: #fff;
  background: #F39801;
}
.share{
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  position: fixed;
  bottom: 0;
  width: 100%;
}

.share image{
  width: 50rpx;
  height: 42rpx;
  margin:20rpx 0;

}
.share button{
  background: #4A93FA;
  border-radius: 50%;
   width: 150rpx;
  height: 150rpx;
  text-align: center;
  padding: 0;
}
.share view{
  background:#4A93FA;
padding:30rpx 0 10rpx;
margin-top:-88rpx;
z-index:10000;
position:relative;



}
/*修改信息  */
.modal{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(24,80,127,.9);
  z-index: 10000;
  color: #fff;
}
.modal image{
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  margin: 80rpx auto;
  display: block;
}
.modal form {
  margin: 10% ;
  width: 80%;
  display: block;
}
.modal form view{
  display: flex;
  margin: 30rpx 0;
  line-height: 60rpx;
  font-size: 36rpx;
}
.modal form view label{
  width: 30%;
}
.modal input,.modal picker{
  /* padding: 10rpx; */
  text-align: center;
  width: 100%;
  background: #4A93FA;
  border-radius: 4px;
  line-height: 70rpx;
  height: 70rpx;
}
.modal button{
  margin: 150rpx 0 0;
  width: 100%;
  background: #4A93FA;
  color: #fff;
  font-size: 34rpx;
}